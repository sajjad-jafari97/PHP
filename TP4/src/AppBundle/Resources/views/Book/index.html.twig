{% extends "::base.html.twig" %}
{% block stylesheetsBook %}{% endblock %}
{% block title %}AppBundle:Book:index{% endblock %}

{% block body %}
<div class="container" style="background:darkblue">
  <h1 class="text-center" style="color:white">Ajouter Un Livre</h1>
</div>
<div class="col-md-3" style="margin-top:20px">
  {{form_start(form)}}
 {{form_end(form)}}
</div>
  <div class="col-md-9" style="margin-top:20px">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Title</th>
        <th>Isbn</th>
        <th>Number Of Pages</th>
        <th>Action</th>
      </tr>
      {% for b in books %}
      <tr>
        <td>{{b.title}}</td>
        <td>{{b.isbn}}</td>
        <td>{{b.nbPages}}</td>
        <td>
          <a href="{{path('book_delete', {'id':b.id})}}" class="btn btn-danger btn-xs">Supprimer</a>
          <a href="{{path('book_update', {'id':b.id})}}" class="btn btn-primary btn-xs">Modifier</a>
        </td>
      </tr>
      {% endfor %}
    </table>
  </div>
{% endblock %}
